\newcommand{\drawDof}[3]{%
  \filldraw[draw=black, fill=#3!60] (#1,0) rectangle ++ (1,1);
  \node [at={(#1.5, .5)}] {#2};
}

\newcommand{\drawCellDof}[2]{%
  \drawDof{#1}{#2}{celldofcolor};
}

\newcommand{\drawEdgeDof}[2]{%
  \drawDof{#1}{#2}{edgedofcolor};
}

\newcommand{\drawVertDof}[2]{%
  \drawDof{#1}{#2}{vertdofcolor};
}

\newcommand{\drawNodeDof}[2]{%
  \drawDof{#1}{#2}{nodedofcolor};
}

\newcommand{\drawWhiteDof[2]{%
  \drawDof{#1}{#2}{white};
}
